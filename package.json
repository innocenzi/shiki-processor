{
	"name": "shiki-processor",
	"version": "0.1.2",
	"description": "Add processing capabilities to Shiki's highlighter",
	"keywords": [
		"shiki",
		"processor"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/innocenzi/shiki-processor.git"
	},
	"funding": "https://github.com/sponsors/innocenzi",
	"author": "Enzo Innocenzi <enzi@innocenzi.dev>",
	"type": "module",
	"packageManager": "pnpm@7.12.0",
	"homepage": "https://github.com/innocenzi/shiki-processor#readme",
	"bugs": "https://github.com/innocenzi/shiki-processor/issues",
	"sideEffects": false,
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs"
		}
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*",
				"./dist/index.d.ts"
			]
		}
	},
	"scripts": {
		"build": "unbuild",
		"dev": "unbuild --stub",
		"lint": "eslint .",
		"prepublishOnly": "nr build",
		"release": "bumpp && npm publish",
		"start": "esno src/index.ts",
		"test": "vitest",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"shiki": "^0.11.0 || ^0.12.0 || ^0.13.0"
	},
	"devDependencies": {
		"@antfu/ni": "^0.19.0",
		"@antfu/utils": "^0.7.2",
		"@innocenzi/eslint-config": "^0.14.0",
		"@types/node": "^18.11.18",
		"bumpp": "^8.2.1",
		"eslint": "^8.33.0",
		"esno": "^0.16.3",
		"pnpm": "^7.26.2",
		"shiki": "^0.13.0",
		"typescript": "^4.9.4",
		"unbuild": "^1.1.1",
		"vitest": "^0.28.3"
	},
	"pnpm": {
		"overrides": {
			"@innocenzi/eslint-config>eslint-plugin-tailwindcss": "3.8.0"
		}
	}
}
